<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Require_Resolved_Notes</fullName>
    <active>true</active>
    <errorConditionFormula>ISPICKVAL(Status__c, &quot;Resolved&quot;) &amp;&amp; ISBLANK(Resolved_Notes__c)</errorConditionFormula>
